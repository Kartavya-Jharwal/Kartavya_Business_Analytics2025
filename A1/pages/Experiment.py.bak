            with col1:
                st.metric("Sample Size", f"n = {corr_results['n']}")
            with col2:
                st.metric("Pearson's r", f"{corr_results['pearson_r']:.3f}")
            with col3:
                st.metric("Spearman's ρ", f"{corr_results['spearman_rho']:.3f}")
            with col4:
                st.metric("R²", f"{corr_results['r_squared']:.3f}")

            # Significance
            st.markdown(f"**Statistical Significance:** Both correlations p < 0.001 (highly significant)")

            # Scatter plot
            fig = px.scatter(year_data, x=gdp_col, y=co2_col,
                           trendline="ols",
                           title=f"GDP vs CO₂ Emissions ({analysis_year})",
                           labels={gdp_col: "GDP per capita (USD)",
                                  co2_col: "CO₂ emissions per capita (tons)"})
            fig.update_layout(template=get_plotly_theme())
            st.plotly_chart(fig, use_container_width=True)

        else:
            st.warning("Insufficient data for the selected year.")

    elif analysis_type == "Categorical Comparison":
        st.markdown("## Categorical Comparison by GDP Groups")

        # ANOVA test
        groups = []
        group_names = []
        for category in ["Low", "Medium", "High"]:
            group_data = year_data[year_data["GDP_Category"] == category][co2_col].dropna()
            if len(group_data) > 2:
                groups.append(group_data.values)
                group_names.append(category)

        if len(groups) >= 2:
            anova_results = perform_anova_test(groups)

            st.markdown("### ANOVA Results")
            st.metric("F-statistic", f"{anova_results['f_statistic']:.2f}")
            st.metric("p-value", f"{anova_results['p_value']:.4f}")
            st.metric("Effect Size (η²)", f"{anova_results['eta_squared']:.3f}")

            if anova_results['p_value'] < 0.05:
                st.success("✅ Significant differences between GDP categories")
            else:
                st.error("❌ No significant differences between GDP categories")

            # Box plot
            fig = px.box(year_data, x="GDP_Category", y=co2_col,
                        title=f"CO₂ Emissions by GDP Category ({analysis_year})",
                        labels={"GDP_Category": "GDP Category",
                               co2_col: "CO₂ emissions per capita (tons)"})
            fig.update_layout(template=get_plotly_theme())
            st.plotly_chart(fig, use_container_width=True)

    elif analysis_type == "Time Series":
        st.markdown("## Time Series Analysis")

        # Aggregate by year and GDP category
